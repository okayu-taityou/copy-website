# アプリケーション設定
NODE_ENV=development
PORT=3000

# データベース設定（SQLiteを使用するため、パスのみ）
DB_PATH=./database/tennis_club.db

# JWT設定
JWT_SECRET=tennis-club-secret-key-change-in-production
JWT_EXPIRES=7d

# メール設定（Gmail使用の場合）
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@tennis-club.com

# セキュリティ設定
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CONTACT_RATE_LIMIT=5

# ファイルアップロード設定
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# ログ設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 開発用設定
# 本番環境では削除してください
DEV_MODE=true
MOCK_EMAIL=true

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,file://