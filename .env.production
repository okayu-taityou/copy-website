# 本番環境設定
NODE_ENV=production
PORT=3000

# データベース設定
DB_PATH=./database/tennis_club.db

# JWT設定（必ず変更してください）
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES=7d

# メール設定（Gmailの場合）
SMTP_USER=your-tennis-club-email@gmail.com
SMTP_PASS=your-gmail-app-password
ADMIN_EMAIL=admin@your-tennis-club.com

# セキュリティ設定
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CONTACT_RATE_LIMIT=5

# ファイルアップロード設定
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# ログ設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 本番環境設定
DEV_MODE=false
MOCK_EMAIL=false

# CORS設定（本番ドメインに変更）
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com